            <Font name="System Bold" size="12.0" />
         </font>
      </TextField>
      <TextField fx:id="albumPesquisa" layoutX="349.0" layoutY="50.0" onKeyTyped="#pesquisarAlbum" prefHeight="26.0" prefWidth="200.0" promptText="Álbum">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </TextField>
      <TextField fx:id="duracao" layoutX="113.0" layoutY="125.0" prefHeight="26.0" prefWidth="200.0" promptText="Duração">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </TextField>
      <TextArea fx:id="letra" layoutX="113.0" layoutY="192.0" prefHeight="75.0" prefWidth="200.0" promptText="Letra">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </TextArea>
      <Button fx:id="buttonAdicionar" layoutX="200.0" layoutY="304.0" mnemonicParsing="false" onAction="#onAdicionarClick" prefHeight="50.0" prefWidth="172.0" text="Adicionar" textFill="#34a82d">
