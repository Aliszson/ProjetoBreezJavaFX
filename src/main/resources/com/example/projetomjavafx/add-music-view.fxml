<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projetomjavafx.AddMusicController">
   <children>
      <TextField fx:id="titulo" layoutX="113.0" layoutY="50.0" prefHeight="26.0" prefWidth="200.0" promptText="Titulo">
