            <Font size="28.0" />
         </font>
      </Button>
      <ListView fx:id="albumList" layoutX="349.0" layoutY="77.0" prefHeight="75.0" prefWidth="200.0" />
      <Label layoutX="113.0" layoutY="28.0" prefHeight="22.0" prefWidth="43.0" text="Título">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Label>
      <Label layoutX="113.0" layoutY="103.0" prefHeight="22.0" prefWidth="62.0" text="Duração">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Label>
      <Label layoutX="113.0" layoutY="170.0" prefHeight="22.0" prefWidth="43.0" text="Letra">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Label>
      <Label layoutX="350.0" layoutY="28.0" prefHeight="22.0" prefWidth="50.0" text="Álbum">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Label>
      <ImageView fx:id="voltar" fitHeight="39.0" fitWidth="34.0" layoutX="14.0" layoutY="13.0" onMouseClicked="#onVoltarClick" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../img/icone/setaVoltar.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
