<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.shape.Circle?>

<AnchorPane fx:id="moldeAlbum" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projetomjavafx.TelaPrincipalController">
   <children>
      <BorderPane prefHeight="400.0" prefWidth="601.0">
         <top>
            <HBox prefHeight="50.0" prefWidth="600.0" BorderPane.alignment="CENTER">
               <children>
                  <ButtonBar prefHeight="58.0" prefWidth="276.0">
                    <buttons>
                      <Button fx:id="inicio" focusTraversable="false" minWidth="43.0" mnemonicParsing="false" onMouseClicked="#onInicioClick" prefHeight="36.0" text="Início" />
                        <MenuButton fx:id="adicionar" focusTraversable="false" mnemonicParsing="false" prefHeight="36.0" prefWidth="481.0" text="Adicionar">
                          <items>
                            <MenuItem fx:id="addAlbum" mnemonicParsing="false" onAction="#onAddAlbumClick" text="Álbum" />
                            <MenuItem fx:id="addMusica" mnemonicParsing="false" onAction="#onAddMusicaClick" text="Música" />
                          </items>
                        </MenuButton>
                    </buttons>
                  </ButtonBar>
                  <Region prefHeight="58.0" prefWidth="329.0" />
                  <Circle fx:id="circuloFoto" fill="TRANSPARENT" onMouseClicked="#onCirculoClicked" radius="29.0" stroke="BLACK" strokeType="INSIDE" />
                  <Region prefHeight="58.0" prefWidth="40.0" />
                  <ButtonBar buttonOrder="" prefHeight="52.0" prefWidth="0.0" />
               </children>
            </HBox>
         </top>
         <center>
            <HBox prefHeight="355.0" prefWidth="600.0" style="-fx-background-color: #bfbfbf;" BorderPane.alignment="CENTER" />
         </center>
      </BorderPane>
   </children>
</AnchorPane>
